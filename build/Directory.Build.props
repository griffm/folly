<Project>
  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AnalysisLevel>latest</AnalysisLevel>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Folly Contributors</Authors>
    <Company>Folly Project</Company>
    <Product>Folly XSL-FO Processor</Product>
    <Copyright>Copyright Â© Folly Contributors</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/folly/folly</PackageProjectUrl>
    <RepositoryUrl>https://github.com/folly/folly</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.TXT</PackageReadmeFile>
    <PackageTags>xsl-fo;pdf;formatting-objects;renderer</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Nerdbank.GitVersioning" Version="3.6.133">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>
